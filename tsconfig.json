{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "target": "es2020"
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src/**/*.ts"]
}
